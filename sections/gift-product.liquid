<!-- Added section title and updated to use Shopify products with exact dimensions -->
<div class="products-section">
  <h2 class="products-title">{{ section.settings.section_title | default: 'Tisso vison in the wild' }}</h2>
  
  <div class="products-grid">
    {% assign product_limit = section.settings.product_limit | default: 6 %}
    {% for product in collections[section.settings.collection].products limit: product_limit %}
      <div class="product-item">
        <div class="product-image-container">
          {% if product.featured_image %}
            <img src="{{ product.featured_image | img_url: '433x444' }}" 
                 alt="{{ product.featured_image.alt | default: product.title }}" 
                 class="product-image">
          {% else %}
            <img src="{{ 'product-placeholder.png' | asset_url }}" 
                 alt="{{ product.title }}" 
                 class="product-image">
          {% endif %}
          <div class="plus-icon">+</div>
        </div>
      </div>
    {% else %}
      <!-- Fallback to asset images if no products found -->
      <div class="product-item">
        <div class="product-image-container">
          <img src="{{ 'product-1.jpg' | asset_url }}" alt="Leather Handbag" class="product-image">
          <div class="plus-icon">+</div>
        </div>
      </div>
      
      <div class="product-item">
        <div class="product-image-container">
          <img src="{{ 'product-2.jpg' | asset_url }}" alt="Formal Suit" class="product-image">
          <div class="plus-icon">+</div>
        </div>
      </div>
      
      <div class="product-item">
        <div class="product-image-container">
          <img src="{{ 'product-3.jpg' | asset_url }}" alt="Plaid Shirt" class="product-image">
          <div class="plus-icon">+</div>
        </div>
      </div>
      
      <div class="product-item">
        <div class="product-image-container">
          <img src="{{ 'product-4.jpg' | asset_url }}" alt="Leather Jacket" class="product-image">
          <div class="plus-icon">+</div>
        </div>
      </div>
      
      <div class="product-item">
        <div class="product-image-container">
          <img src="{{ 'product-5.jpg' | asset_url }}" alt="Varsity Jacket" class="product-image">
          <div class="plus-icon">+</div>
        </div>
      </div>
      
      <div class="product-item">
        <div class="product-image-container">
          <img src="{{ 'product-6.jpg' | asset_url }}" alt="Denim Jacket" class="product-image">
          <div class="plus-icon">+</div>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

<style>
.products-section {
  padding: 40px 20px;
  max-width: 1400px;
  margin: 0 auto;
}

/* Added section title styling */
.products-title {
  font-size: 24px;
  font-weight: 600;
  color: #000;
  margin-bottom: 30px;
  text-align: left;
}

.products-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20px;
}

.product-item {
  position: relative;
}

.product-image-container {
  position: relative;
  /* Updated to exact dimensions specified */
  width: 433px;
  height: 444px;
  max-width: 100%;
  overflow: hidden;
  border-radius: 8px;
}

.product-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.product-image:hover {
  transform: scale(1.05);
}

.plus-icon {
  position: absolute;
  /* Updated positioning with exact margins */
  top: 10px;
  right: 10px;
  width: 30px;
  height: 30px;
  background-color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18px;
  font-weight: bold;
  color: #000;
  cursor: pointer;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
  transition: all 0.3s ease;
}

.plus-icon:hover {
  background-color: #000;
  color: white;
  transform: scale(1.1);
}

/* Mobile Responsive */
@media (max-width: 768px) {
  .products-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 15px;
  }
  
  .product-image-container {
    width: 100%;
    height: 300px;
  }
  
  .products-section {
    padding: 30px 15px;
  }
  
  .products-title {
    font-size: 20px;
    text-align: center;
  }
}

@media (max-width: 480px) {
  .products-grid {
    /* Updated to show 1 product per row on mobile */
    grid-template-columns: 1fr;
    gap: 20px;
  }
  
  .product-image-container {
    height: 350px;
  }
}
</style>

{% schema %}
{
  "name": "Gift Products",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Tisso vison in the wild"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Product Collection"
    },
    {
      "type": "range",
      "id": "product_limit",
      "min": 1,
      "max": 12,
      "step": 1,
      "label": "Number of Products",
      "default": 6
    }
  ]
}
{% endschema %}
