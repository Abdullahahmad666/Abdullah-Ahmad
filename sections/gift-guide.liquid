<div class="gift-guide-banner-container">
  <!-- Header -->
  <header class="gift-guide-header">
    <!-- Logo (always visible) -->
    <div class="logo">{{ section.settings.logo_text | default: 'TISSO VISION' }}</div>

    <!-- Desktop tagline and button -->
    <div class="desktop-menu">
      <div class="tagline">{{ section.settings.tagline | default: 'Find the ideal gift for your loved ones.' }}</div>
      <a href="{{ section.settings.choose_gift_url | default: '/collections/all' }}" class="choose-gift-btn">
        CHOOSE GIFT
        <span class="arrow">→</span>
      </a>
    </div>

    <!-- Mobile header: logo + hamburger -->
    <div class="mobile-header">
      <button class="menu-toggle" onclick="toggleMobileMenu()" aria-label="Toggle menu">
        <span class="hamburger-icon">&#9776;</span>
      </button>
    </div>
  </header>

  <!-- Mobile menu content (hidden by default) -->
  <div class="mobile-menu-content" id="mobileMenu">
    <div class="tagline">{{ section.settings.tagline | default: 'Find the ideal gift for your loved ones.' }}</div>
    <a href="{{ section.settings.choose_gift_url | default: '/collections/all' }}" class="choose-gift-btn">
      CHOOSE GIFT
      <span class="arrow">→</span>
    </a>
  </div>

  <!-- Main Hero Section -->
  <main class="hero-section">
    <!-- <CHANGE> Updated banner background to use the provided SVG image -->
    <div class="banner-bg">
      <img src="{{ 'main-banner.svg' | asset_url }}" alt="Gift Guide Banner" class="banner-image" width="1200" height="400">
    </div>

    <!-- Content -->
    <div class="hero-content">
      <h1 class="main-title">{{ section.settings.main_title | default: 'The Gift Guide' }}</h1>

      <div class="description">
        <p class="subtitle">{{ section.settings.subtitle | default: 'Discover Joy: Your Ultimate Holiday Gift Destination.' }}</p>
        <p class="body-text">
          {{ section.settings.description | default: 'Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season.' }}
        </p>
      </div>

      <a href="{{ section.settings.shop_url | default: '/collections/all' }}" class="shop-now-btn">
        SHOP NOW
        <span class="arrow">→</span>
      </a>
    </div>

    <!-- Bottom Text -->
    <div class="sustainability-text">
      {{ section.settings.sustainability_text | default: 'SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL' }}
    </div>
  </main>
</div>

<style>
  .gift-guide-banner-container {
    background-color: #f8f8f8;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  }

  /* Header Styles */
  .gift-guide-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 24px 32px;
    background-color: #f5f5f5;
    position: relative;
  }

  .logo {
    font-size: 24px;
    font-weight: bold;
    letter-spacing: 0.1em;
    color: black;
  }

  /* <CHANGE> Desktop menu styling */
  .desktop-menu {
    display: flex;
    align-items: center;
    gap: 24px;
  }

  .tagline {
    color: black;
    font-size: 18px;
  }

  .choose-gift-btn {
    background-color: #fff544;
    color: black;
    padding: 12px 24px;
    font-weight: 600;
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 8px;
    transition: all 0.3s ease;
    text-decoration: none;
  }

  .choose-gift-btn:hover {
    background-color: black;
    color: white;
  }

  /* <CHANGE> Mobile header and menu styling */
  .mobile-header {
    display: none;
  }

  .menu-toggle {
    background: none;
    border: none;
    font-size: 24px;
    cursor: pointer;
    padding: 8px;
    color: black;
  }

  .mobile-menu-content {
    display: none;
    padding: 20px 32px;
    background-color: #f5f5f5;
    border-top: 1px solid #e0e0e0;
    flex-direction: column;
    gap: 16px;
    align-items: center;
    text-align: center;
  }

  .mobile-menu-content.show {
    display: flex;
  }

  .arrow {
    font-size: 20px;
  }

  /* Hero Section */
  .hero-section {
    position: relative;
    background-color: #f5f5f5;
    padding: 64px 32px;
    overflow: hidden;
  }

  .banner-bg {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    opacity: 0.3;
    pointer-events: none;
    background: white;
  }

  .banner-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .hero-content {
    position: relative;
    z-index: 10;
    max-width: 512px;
  }

  .main-title {
    font-size: 72px;
    font-weight: bold;
    color: black;
    margin-bottom: 32px;
    line-height: 1.1;
  }

  .description {
    margin-bottom: 48px;
    max-width: 384px;
  }

  .subtitle {
    font-weight: 600;
    color: black;
    font-size: 18px;
    margin-bottom: 16px;
  }

  .body-text {
    color: black;
    font-size: 18px;
    line-height: 1.6;
  }

  .shop-now-btn {
    background-color: black;
    color: white;
    padding: 16px 32px;
    font-weight: 600;
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 8px;
    transition: all 0.3s ease;
    text-decoration: none;
  }

  .shop-now-btn:hover {
    background-color: #fff544;
    color: black;
  }

  .sustainability-text {
    position: absolute;
    bottom: 32px;
    left: 32px;
    color: black;
    font-size: 14px;
    font-weight: 500;
    letter-spacing: 0.05em;
  }

  /* <CHANGE> Mobile responsive design with hamburger menu */
  @media (max-width: 768px) {
    .desktop-menu {
      display: none;
    }

    .mobile-header {
      display: block;
    }

    .gift-guide-header {
      padding: 20px 16px;
    }

    .logo {
      font-size: 20px;
    }

    .tagline {
      font-size: 16px;
    }

    .choose-gift-btn {
      padding: 14px 28px;
      font-size: 14px;
    }

    .hero-section {
      padding: 40px 16px;
    }

    .main-title {
      font-size: 48px;
      margin-bottom: 24px;
    }

    .subtitle {
      font-size: 16px;
    }

    .body-text {
      font-size: 16px;
    }

    .shop-now-btn {
      padding: 14px 28px;
      font-size: 14px;
    }

    .sustainability-text {
      position: static;
      text-align: center;
      margin-top: 32px;
      font-size: 12px;
      padding: 0 16px;
    }

    .mobile-menu-content {
      padding: 20px 16px;
    }
  }

  @media (max-width: 480px) {
    .logo {
      font-size: 18px;
    }

    .main-title {
      font-size: 36px;
    }

    .choose-gift-btn,
    .shop-now-btn {
      padding: 12px 24px;
      font-size: 13px;
    }
  }
</style>

<script>
  function toggleMobileMenu() {
    const menu = document.getElementById('mobileMenu');
    const toggleBtn = document.querySelector('.menu-toggle .hamburger-icon');
    
    menu.classList.toggle('show');
    
    // <CHANGE> Toggle between hamburger and cross icons
    if (menu.classList.contains('show')) {
      toggleBtn.innerHTML = '&times;';
    } else {
      toggleBtn.innerHTML = '&#9776;';
    }
  }
</script>

